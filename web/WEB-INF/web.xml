<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>blog.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>blog.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Addblog</servlet-name>
        <servlet-class>blog.Addblog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Updateblog</servlet-name>
        <servlet-class>blog.Updateblog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Removeblog</servlet-name>
        <servlet-class>blog.Removeblog</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Rate</servlet-name>
        <servlet-class>blog.Rate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Comment</servlet-name>
        <servlet-class>blog.Comment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Addblog</servlet-name>
        <url-pattern>/Addblog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Updateblog</servlet-name>
        <url-pattern>/Updateblog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Removeblog</servlet-name>
        <url-pattern>/Removeblog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Rate</servlet-name>
        <url-pattern>/Rate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Comment</servlet-name>
        <url-pattern>/Comment</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
